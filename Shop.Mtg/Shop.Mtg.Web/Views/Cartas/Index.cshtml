                @Html.DisplayFor(modelItem => item.CustoMana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lendaria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTipoA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTipoB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resistencia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
