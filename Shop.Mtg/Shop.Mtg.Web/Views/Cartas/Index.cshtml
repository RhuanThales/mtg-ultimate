        <th>
            @Html.DisplayNameFor(model => model.SubTipoA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTipoB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
